<!-- vies/userList.ejs -->

<head>            
    <script>
        // Clickable row
        window.addEventListener("load", function() {
            const clickRows = document.querySelectorAll('.click-row');
            clickRows.forEach(row => {
                row.addEventListener('click', function() {
                    window.location.href = row.getAttribute('data-href');
                });
            });
        });        
    </script>

    <style>
        .click-row:hover {
            cursor:pointer;
        }

        .pagination {
            margin-top: 20px;
        }
    </style>
</head>

<body>

    <h2>User List</h2>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr class="click-row" data-href="/api/users/<%= user.id %>">
                    <td><%= user.id %></td>
                    <td><%= user.firstName %></td>
                    <td><%= user.lastName %></td>
                    <td><%= user.email %></td>
                </tr>
            <% }); %>
        </tbody>                
    </table>

    <div class="pagination">
        <% if (hasPreviousPage) { %>
            <a href="/api/users?page=<%= previousPage %>&limit=25" class="btn btn-primary">Previous</a>
        <% } %>
        <span class="page-number">Page <%= currentPage %></span>
        <% if (hasNextPage) { %>
            <a href="/api/users?page=<%= nextPage %>&limit=25" class="btn btn-primary">Next</a>
        <% } %>
    </div>

    <a href="/api/products" class="btn btn-secondary mt-3">Go to Product List</a>
    
</body>
