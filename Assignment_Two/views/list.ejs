<head>        
    <script>
        // Clickable row
        window.addEventListener("load", function() {
            const clickRows = document.querySelectorAll('.click-row');
            clickRows.forEach(row => {
                row.addEventListener('click', function() {
                    window.location.href = row.getAttribute('data-href');
                });
            });
        });        
    </script>

    <style>
        .click-row:hover {
            cursor:pointer;
        }
    </style>
</head>

<body>
    <h2>
        User List
    </h2>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                <% users.slice(0, 25).forEach(user => { %>
                    <tr class="click-row" data-href="/details/<%= user.id %>">
                        <td><%= user.id + 1 %></td>
                        <td><%= user.firstName %></td>
                        <td><%= user.lastName %></td>
                        <td><%= user.email %></td>
                    </tr>
                <% }); %>
            </tbody>                
        </table>
</body>

